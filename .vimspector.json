{
    "configurations": {
        "train": {
            "adapter": "debugpy",
            "configuration": {
                "name": "train",
                "type": "python",
                "request": "launch",
                "python": "$HOME/.conda/envs/protoclf/bin/python",
                "program": "${workspaceRoot}/scripts/train.py",
                "args": ["-i", "data/random_split", "-o", "runs"],
                "cwd": "${workspaceRoot}",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                }
            }
        },
        "evaluate": {
            "adapter": "debugpy",
            "configuration": {
                "name": "evaluate",
                "type": "python",
                "request": "launch",
                "python": "$HOME/.conda/envs/protoclf/bin/python",
                "program": "${workspaceRoot}/scripts/evaluate.py",
                "cwd": "${workspaceRoot}",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                }
            }
        },
        "jupyter": {
            "adapter": "debugpy",
            "configuration": {
                "name": "jupyter",
                "type": "python",
                "request": "launch",
                "python": "$HOME/.conda/envs/protoclf/bin/python",
                "program": "${workspaceRoot}/ml-pipeline-refactoring.py",
                "cwd": "${workspaceRoot}",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                }
            }
        }
    }
}
